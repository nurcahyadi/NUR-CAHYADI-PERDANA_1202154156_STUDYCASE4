<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context="com.example.android.nurcahyadiperdana_1202154156_studycase4.PencariGambar">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cari Gambar"
        android:textSize="30sp"

        />
    <EditText
        android:id="@+id/linkgambar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan URL Gambar"
        />
    <Button
        android:id="@+id/btnmencari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="klik untuk mencari gambar"
        />
    <ImageView
        android:id="@+id/gambar"
        android:layout_width="300dp"
        android:layout_height="300dp"
        />
</LinearLayout>

